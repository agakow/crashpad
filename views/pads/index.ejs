<!DOCTYPE html>
<html>
  <head><% include ../partials/page/head.ejs %></head>
  <body>
    <% include ../partials/page/header.ejs %>

    <div class="container">
      <div class="col-md-6 col-md-offset-3">

        <div class="row">
          <form action="">
            <div class="col-md-6">
              <div class="form-group">
                <label for="from-date">From Date</label>
                <input type="text" class="form-control" id="from-date" name="" placeholder="mm/dd/yyyy">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="from-date">To Date</label>
                <div class="input-group">
                  <input type="text" class="form-control" id="to-date" name="" placeholder="mm/dd/yyyy">
                  <span class="input-group-btn">
                    <input class="btn btn-primary pull-right" type="submit" value="Filter">
                  </span>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="list-group">
          <% for (var i=0; i < padList.length;i++) { %>
          <a href="/pads/<%= padList[i].id %>" class="list-group-item">
            <h4 class="list-group-item-heading"><%= padList[i].name; %> <span class="label label-primary">Â£<%= padList[i].price; %></span></h4>
            <h5 class="list-group-item-heading"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= padList[i].location; %></h5>
            <h6 class="list-group-item-heading"><i class="fa fa-calendar" aria-hidden="true"></i> <b><%= padList[i].availableFrom.toDateString(); %></b> to <b><%= padList[i].availableTo.toDateString(); %></b> </h6>
            <p class="list-group-item-text text-muted"><%= padList[i].description.substring(0, 200); %></p>
          </a>
          <% }; %>
        </div>
      </div>
    </div>
    <% include ../partials/page/footer.ejs %>
    <script>
      $(document).ready(function() {
        $(function() {
          $("#from-date").datepicker({
            minDate: 0
          });
          $("#to-date").datepicker({
            minDate: 0
          });
        });
      });
    </script>
  </body>
</html>
